<apex:component layout="none" controller="SelectMemberController" >
    <apex:attribute name="record" type="FieloAlpha__Member__c" description="" />
    <apex:attribute name="field" type="FieloCMS.Field" description="" />

    <apex:panelGroup layout="none" rendered="{!(field.attributes['memberType'] == 'Member' || (record.FieloAlpha__OrganizationAccount__c != null && record.FieloAlpha__IsManager__c == true))}" >
        <div class="fielo-form">
            <form class="fielo-js-upgrade fielo-form--is-component-{!field.apiName}" data-remoteaction="FieloCMS_EE.SelectMemberController.selectMember" data-remotearguments="memberId,type" ><!--{!field.attributes['CSSClasses__c']} -->
                <input type="hidden" name="memberId" value="{!record.Id}" data-object-property="Id" data-attribute-replace="value"/>
                <input type="hidden" name="type" value="{!field.attributes['memberType']}" />
                <apex:panelGroup layout="none" rendered="{!!record.FieloAlpha__Blocked__c}">
                    <button type="submit" class="fielo-button fielo-button__submit" >{!IF(field.attributes['memberType'] == 'Member', $Label.LoginAsMember,$Label.LoginAsOrganization)}</button>
                </apex:panelGroup>
            </form>
        </div>
    </apex:panelGroup>
</apex:component>